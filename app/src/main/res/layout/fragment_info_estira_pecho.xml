<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/entrenamientoo"
    tools:context=".InfoEstiraPechoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primario"
        android:alpha="0.7">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:padding="28dp">

        <Button
            android:id="@+id/btnTutorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/black"
            android:text="@string/ettuturial" />



        <Button
            android:id="@+id/btnAnimacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="@color/black"
            android:text="@string/etanimacion" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:padding="28dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:src="@drawable/ejerciciosv2" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/card_view">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estiramiento de pecho"
                    android:textColor="@color/primario"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/etinfopecho"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="start|end" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Musculos resaltados"
                    android:textColor="@color/primario"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-0dp"
                    android:src="@drawable/ima3" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona principal"
                    android:textColor="@color/primario"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hombros"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aductores"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gemelos"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuadriceps"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gluteo"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pecho"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="start|end"
                        android:layout_columnWeight="1"/>

                </GridLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSiguiente"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="SIGUIENTE"
                    android:textSize="25sp"
                    app:cornerRadius="32dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btncerrar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="CERRAR"
                    android:textSize="25sp"
                    app:cornerRadius="32dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"/>



            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
